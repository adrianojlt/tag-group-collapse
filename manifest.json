{
  "manifest_version": 3,
  "name": "Collapse Tab Groups",
  "version": "1.0",
  "description": "Collapse Tab Groups",
  "permissions": ["tabGroups", "tabs"],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "collapse_other_groups": {
      "suggested_key": {
        "default": "Alt+Shift+Up"
      },
      "description": "Collapse all tab groups except the active one"
    },
    "collapse_all_groups": {
      "suggested_key": {
        "default": "Alt+Shift+Down"
      },
      "description": "Collapse all tab groups"
    }
  },
  "action": {
    "default_title": "Collapse Tab Groups"
  }
}
